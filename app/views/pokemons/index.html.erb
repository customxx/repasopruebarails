<div class="container">
    
  <p id="notice"><%= notice %></p>

  <h1>Pokemons</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @pokemons.each do |pokemon| %>
        <tr>
          <td><%= pokemon.name %></td>
          <td><%= pokemon.description %></td>
          <td><%= link_to 'Show', pokemon %></td>
          <td><%= link_to 'Edit', edit_pokemon_path(pokemon) %></td>
          <td><%= link_to 'Destroy', pokemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button type="submit" class="btn btn-default"> <%= link_to 'New Pokemon', new_pokemon_path %> </button> 
</div>